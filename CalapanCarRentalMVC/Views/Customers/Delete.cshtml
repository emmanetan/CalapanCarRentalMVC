@model CalapanCarRentalMVC.Models.Customer
@{
    ViewData["Title"] = "Delete Customer";
    Layout = "_Layout";
}

<div class="page-header">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1><i class="fas fa-trash text-danger me-2"></i>Delete Customer</h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Admin" asp-action="Dashboard">Dashboard</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index">Customers</a></li>
                    <li class="breadcrumb-item active">Delete</li>
                </ol>
            </nav>
        </div>
        <div>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left me-1"></i>Back to List
            </a>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-8 mx-auto">
        <div class="alert alert-danger">
            <h4 class="alert-heading"><i class="fas fa-exclamation-triangle me-2"></i>Warning!</h4>
            <p class="mb-0">Are you sure you want to delete this customer? This action cannot be undone.</p>
        </div>

        <div class="dashboard-widget">
            <h5><i class="fas fa-info-circle me-2"></i>Customer Information</h5>

            <div class="row mb-3">
                <div class="col-md-6">
                    <label class="text-muted">Customer ID</label>
                    <p><strong>#@Model.CustomerId</strong></p>
                </div>
                <div class="col-md-6">
                    <label class="text-muted">Registration Date</label>
                    <p>@Model.CreatedAt.ToString("MMMM dd, yyyy")</p>
                </div>
            </div>

            <hr />

            <div class="row mb-3">
                <div class="col-md-6">
                    <label class="text-muted">Full Name</label>
                    <p><strong>@Model.FirstName @Model.LastName</strong></p>
                </div>
                <div class="col-md-6">
                    <label class="text-muted">Email</label>
                    <p>@Model.Email</p>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <label class="text-muted">Phone Number</label>
                    <p>@Model.PhoneNumber</p>
                </div>
                <div class="col-md-6">
                    <label class="text-muted">License Number</label>
                    <p>@Model.LicenseNumber</p>
                </div>
            </div>

            <div class="mb-3">
                <label class="text-muted">Address</label>
                <p>@Model.Address</p>
            </div>

            <hr />

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="CustomerId" />
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash me-1"></i>Yes, Delete Customer
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-times me-1"></i>Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
