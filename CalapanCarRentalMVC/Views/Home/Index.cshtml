@model IEnumerable<CalapanCarRentalMVC.Models.Car>
@{
    ViewData["Title"] = "Home";
}

<!-- Hero Section -->
<div class="hero-section text-dark py-5" style="background: linear-gradient(rgba(248, 249, 250, 0.95), rgba(248, 249, 250, 0.95)), url('/images/hero-car.png') center/cover no-repeat;">
    <div class="container">
        <div class="row align-items-center">
 <div class="col-lg-12 text-center">
       <h1 class="display-4 fw-bold mb-3">Welcome to Calapan Car Rental</h1>
      <p class="lead mb-4">Rent quality vehicles at affordable prices. Your journey starts here!</p>
      <a asp-controller="Cars" asp-action="Index" class="btn btn-danger btn-lg">
        <i class="fas fa-car me-2"></i>Browse Our Fleet
        </a>
      </div>
    </div>
    </div>
</div>

<!-- Features Section -->
<div class="container my-5">
    <div class="row text-center">
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
     <div class="card-body">
      <i class="fas fa-car fa-3x text-primary mb-3"></i>
   <h4>Wide Selection</h4>
        <p>Choose from our diverse fleet of well-maintained vehicles</p>
    </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
      <div class="card-body">
         <i class="fas fa-dollar-sign fa-3x text-success mb-3"></i>
         <h4>Affordable Rates</h4>
         <p>Competitive pricing with no hidden fees</p>
         </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
        <div class="card h-100 shadow-sm">
     <div class="card-body">
  <i class="fas fa-shield-alt fa-3x text-info mb-3"></i>
            <h4>Fully Insured</h4>
          <p>All vehicles are fully insured for your peace of mind</p>
      </div>
            </div>
        </div>
    </div>
</div>

<!-- Featured Cars Section -->
<div class="bg-light py-5">
    <div class="container">
   <h2 class="text-center mb-4">Featured Vehicles</h2>
        <div class="row">
 @if (Model != null && Model.Any())
            {
       @foreach (var car in Model)
   {
     <div class="col-md-4 mb-4">
        <div class="card h-100 shadow-sm">
            @if (!string.IsNullOrEmpty(car.ImageUrl))
      {
      <img src="@car.ImageUrl" class="card-img-top" alt="@car.Brand @car.Model" style="height: 200px; object-fit: cover;" onerror="this.src='/images/default-car.jpg'" />
 }
       else
        {
  <div class="bg-secondary text-white d-flex align-items-center justify-content-center" style="height: 200px;">
         <i class="fas fa-car fa-4x"></i>
     </div>
     }
      <div class="card-body">
              <h5 class="card-title">@car.Brand @car.Model</h5>
         <p class="card-text">
         <small class="text-muted">
     <i class="fas fa-calendar me-1"></i>@car.Year
   <i class="fas fa-cog ms-2 me-1"></i>@car.TransmissionType
     <i class="fas fa-users ms-2 me-1"></i>@car.SeatingCapacity Seats
            </small>
    </p>
     <div class="d-flex justify-content-between align-items-center">
   <h4 class="text-primary mb-0">@Html.Raw("&#8369;")@car.DailyRate.ToString("N2")</h4>
   <span class="text-muted">/day</span>
     </div>
         </div>
  <div class="card-footer bg-transparent">
               <a asp-controller="Cars" asp-action="Details" asp-route-id="@car.CarId" class="btn btn-primary w-100">
            <i class="fas fa-info-circle me-1"></i>View Details
            </a>
       </div>
            </div>
         </div>
}
            }
    else
         {
     <div class="col-12 text-center">
  <p class="lead">No vehicles available at the moment. Please check back later!</p>
           </div>
  }
        </div>
 <div class="text-center mt-4">
            <a asp-controller="Cars" asp-action="Index" class="btn btn-outline-primary btn-lg">
                View All Vehicles <i class="fas fa-arrow-right ms-2"></i>
            </a>
        </div>
    </div>
</div>

<!-- Why Choose Us Section -->
<div class="container my-5">
    <h2 class="text-center mb-4">Why Choose Us?</h2>
    <div class="row">
   <div class="col-md-3 text-center mb-4">
   <i class="fas fa-check-circle fa-3x text-success mb-3"></i>
<h5>Easy Booking</h5>
  <p>Simple and quick reservation process</p>
        </div>
      <div class="col-md-3 text-center mb-4">
 <i class="fas fa-clock fa-3x text-warning mb-3"></i>
            <h5>24/7 Support</h5>
          <p>Round-the-clock customer assistance</p>
        </div>
   <div class="col-md-3 text-center mb-4">
         <i class="fas fa-map-marked-alt fa-3x text-danger mb-3"></i>
       <h5>Multiple Locations</h5>
 <p>Convenient pickup and drop-off points</p>
      </div>
        <div class="col-md-3 text-center mb-4">
            <i class="fas fa-star fa-3x text-primary mb-3"></i>
            <h5>Quality Service</h5>
       <p>Committed to customer satisfaction</p>
        </div>
    </div>
</div>

