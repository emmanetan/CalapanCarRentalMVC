@model CalapanCarRentalMVC.Models.Maintenance
@{
    ViewData["Title"] = "Delete Maintenance";
    Layout = "_Layout";
}

<div class="page-header">
    <div class="d-flex justify-content-between align-items-center">
    <div>
    <h1><i class="fas fa-trash me-2"></i>Delete Maintenance</h1>
            <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
                 <li class="breadcrumb-item"><a asp-controller="Admin" asp-action="Dashboard">Dashboard</a></li>
         <li class="breadcrumb-item"><a asp-action="Index">Maintenance</a></li>
   <li class="breadcrumb-item active">Delete</li>
      </ol>
  </nav>
      </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-8 mx-auto">
 <div class="dashboard-widget">
            <div class="alert alert-danger">
          <i class="fas fa-exclamation-triangle me-2"></i>
     <strong>Warning!</strong> Are you sure you want to delete this maintenance record?
        </div>

     <h5><i class="fas fa-info-circle me-2"></i>Maintenance Details</h5>
     
     <dl class="row">
  <dt class="col-sm-4">Maintenance ID</dt>
      <dd class="col-sm-8">#@Model.MaintenanceId</dd>

   <dt class="col-sm-4">Vehicle</dt>
 <dd class="col-sm-8">
     <strong>@Model.Car?.Brand @Model.Car?.Model</strong><br />
   <small class="text-muted">@Model.Car?.PlateNumber</small>
    </dd>

         <dt class="col-sm-4">Maintenance Type</dt>
     <dd class="col-sm-8">@Model.MaintenanceType</dd>

 <dt class="col-sm-4">Description</dt>
      <dd class="col-sm-8">@Model.Description</dd>

  <dt class="col-sm-4">Date Scheduled</dt>
 <dd class="col-sm-8">@Model.DateScheduled.ToString("MMMM dd, yyyy")</dd>

     @if (Model.DateCompleted.HasValue)
 {
         <dt class="col-sm-4">Date Completed</dt>
    <dd class="col-sm-8">@Model.DateCompleted.Value.ToString("MMMM dd, yyyy")</dd>
    }

   <dt class="col-sm-4">Cost</dt>
      <dd class="col-sm-8"><strong>?@Model.Cost.ToString("N2")</strong></dd>

      <dt class="col-sm-4">Status</dt>
 <dd class="col-sm-8">
    @if (Model.Status == "Urgent")
        {
        <span class="badge bg-danger">Urgent</span>
 }
         else if (Model.Status == "Scheduled")
          {
       <span class="badge bg-warning">Scheduled</span>
      }
   else if (Model.Status == "Completed")
      {
           <span class="badge bg-success">Completed</span>
       }
      </dd>

  @if (!string.IsNullOrEmpty(Model.ServiceProvider))
   {
   <dt class="col-sm-4">Service Provider</dt>
     <dd class="col-sm-8">@Model.ServiceProvider</dd>
 }

   @if (!string.IsNullOrEmpty(Model.Notes))
    {
        <dt class="col-sm-4">Notes</dt>
         <dd class="col-sm-8">@Model.Notes</dd>
 }
   </dl>

      <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="MaintenanceId" />
    <div class="d-flex gap-2">
      <button type="submit" class="btn btn-danger">
       <i class="fas fa-trash me-1"></i>Delete Maintenance
     </button>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-times me-1"></i>Cancel
        </a>
    </div>
   </form>
        </div>
    </div>
</div>
