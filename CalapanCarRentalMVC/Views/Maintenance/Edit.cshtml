@model CalapanCarRentalMVC.Models.Maintenance
@{
    ViewData["Title"] = "Edit Maintenance";
    Layout = "_Layout";
}

<div class="page-header">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1><i class="fas fa-edit me-2"></i>Edit Maintenance</h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Admin" asp-action="Dashboard">Dashboard</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index">Maintenance</a></li>
                    <li class="breadcrumb-item active">Edit</li>
                </ol>
            </nav>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-8 mx-auto">
        <div class="dashboard-widget">
            <h5><i class="fas fa-edit me-2"></i>Update Maintenance Details</h5>

            <form asp-action="Edit" method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                <input type="hidden" asp-for="MaintenanceId" />
                <input type="hidden" asp-for="CreatedAt" />

                <div class="mb-3">
                    <label asp-for="VehicleId" class="form-label">Vehicle</label>
                    <select asp-for="VehicleId" class="form-select" required>
                        <option value="">-- Select Vehicle --</option>
                        @foreach (var car in ViewBag.Cars)
                        {
                            <option value="@car.VehicleId" selected="@(car.VehicleId == Model.VehicleId)">@car.Brand @car.Model - @car.PlateNumber</option>
                        }
                    </select>
                    <span asp-validation-for="VehicleId" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="MaintenanceType" class="form-label">Maintenance Type</label>
                    <select asp-for="MaintenanceType" class="form-select" id="maintenanceTypeSelect" required>
                        <option value="">-- Select Type --</option>
                        <option value="Oil Change">Oil Change</option>
                        <option value="Tire Rotation">Tire Rotation</option>
                        <option value="Brake Service">Brake Service</option>
                        <option value="Engine Repair">Engine Repair</option>
                        <option value="Transmission Service">Transmission Service</option>
                        <option value="Air Conditioning Service">Air Conditioning Service</option>
                        <option value="Battery Replacement">Battery Replacement</option>
                        <option value="General Inspection">General Inspection</option>
                        <option value="Body Work">Body Work</option>
                        <option value="Other">Other</option>
                    </select>
                    <span asp-validation-for="MaintenanceType" class="text-danger"></span>
                </div>

                <div class="mb-3" id="otherMaintenanceTypeField" style="display: none;">
                    <label for="otherMaintenanceType" class="form-label">Specify Maintenance Type</label>
                    <input type="text" id="otherMaintenanceType" class="form-control" placeholder="Ex: Windshield Replacement" />
                    <small class="form-text text-muted">
                        <i class="fas fa-info-circle"></i> This will replace "Other" as the maintenance type
                    </small>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label">Description</label>
                    <textarea asp-for="Description" class="form-control" rows="4" required></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="DateScheduled" class="form-label">Date Scheduled</label>
                        <input asp-for="DateScheduled" type="date" class="form-control" id="dateScheduled" required />
                        <span asp-validation-for="DateScheduled" class="text-danger"></span>
                        <small class="form-text text-muted">
                            <i class="fas fa-info-circle"></i> Cannot select a past date
                        </small>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="DateCompleted" class="form-label">Date Completed (Optional)</label>
                        <input asp-for="DateCompleted" type="date" class="form-control" id="dateCompleted" />
                        <span asp-validation-for="DateCompleted" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Cost" class="form-label">Cost (@Html.Raw("&#8369;"))</label>
                        <input asp-for="Cost" type="number" step="0.01" class="form-control" required />
                        <span asp-validation-for="Cost" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="Status" class="form-label">Status</label>
                        <select asp-for="Status" class="form-select" required>
                            <option value="Scheduled">Scheduled</option>
                            <option value="Urgent">Urgent</option>
                            <option value="Completed">Completed</option>
                        </select>
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="ServiceProvider" class="form-label">Service Provider (Optional)</label>
                    <input asp-for="ServiceProvider" type="text" class="form-control" />
                    <span asp-validation-for="ServiceProvider" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Notes" class="form-label">Additional Notes (Optional)</label>
                    <textarea asp-for="Notes" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Notes" class="text-danger"></span>
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-admin-primary">
                        <i class="fas fa-save me-1"></i>Update Maintenance
                    </button>
                    <a asp-action="Details" asp-route-id="@Model.MaintenanceId" class="btn btn-secondary">
                        <i class="fas fa-times me-1"></i>Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function() {
            // Set minimum date to today for DateScheduled
            var today = new Date().toISOString().split('T')[0];
            $('#dateScheduled').attr('min', today);

            // Validate date on change
            $('#dateScheduled').on('change', function() {
                var selectedDate = $(this).val();
                if (selectedDate < today) {
                    alert('Cannot schedule maintenance for a past date. Please select today or a future date.');
                    $(this).val('');
                }
            });

            // Date completed can be any date (including past)
            // No restriction on dateCompleted

            var predefinedTypes = [
                'Oil Change', 'Tire Rotation', 'Brake Service', 'Engine Repair',
                'Transmission Service', 'Air Conditioning Service', 'Battery Replacement',
                'General Inspection', 'Body Work', 'Other'
            ];
            
            var currentType = '@Model.MaintenanceType';
            var isCustomType = !predefinedTypes.includes(currentType);

            // If current type is custom, add it as an option and show the field
            if (isCustomType && currentType !== '') {
                $('#maintenanceTypeSelect').append('<option value="' + currentType + '" selected>' + currentType + '</option>');
                $('#maintenanceTypeSelect').val(currentType);
                $('#otherMaintenanceTypeField').show();
                $('#otherMaintenanceType').val(currentType);
            }

            // Handle maintenance type dropdown change
            $('#maintenanceTypeSelect').on('change', function() {
                var selectedValue = $(this).val();
                        
                if (selectedValue === 'Other') {
                    $('#otherMaintenanceTypeField').slideDown();
                    $('#otherMaintenanceType').attr('required', true);
                } else if (predefinedTypes.includes(selectedValue)) {
                    $('#otherMaintenanceTypeField').slideUp();
                    $('#otherMaintenanceType').attr('required', false);
                    $('#otherMaintenanceType').val('');
                }
            });

            // Before form submission, update MaintenanceType if Other is selected
            $('form').on('submit', function(e) {
                var selectedType = $('#maintenanceTypeSelect').val();
                 
                // Validate scheduled date
                var scheduledDate = $('#dateScheduled').val();
                if (scheduledDate < today) {
                    e.preventDefault();
                    alert('Cannot schedule maintenance for a past date. Please select today or a future date.');
                    $('#dateScheduled').focus();
                    return false;
                }
                
                if (selectedType === 'Other') {
                  var otherType = $('#otherMaintenanceType').val().trim();

                   if (otherType === '') {
                     e.preventDefault();
 alert('Please specify the maintenance type.');
                     $('#otherMaintenanceType').focus();
                 return false;
             }
                    
  // Update the MaintenanceType value with the custom type
var existingOption = $('#maintenanceTypeSelect option[value="' + otherType + '"]');
 if (existingOption.length === 0) {
                 $('#maintenanceTypeSelect').append('<option value="' + otherType + '" selected>' + otherType + '</option>');
  }
  $('#maintenanceTypeSelect').val(otherType);
           }
       });
     });
    </script>
}
