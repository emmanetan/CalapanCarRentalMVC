@model IEnumerable<CalapanCarRentalMVC.Models.User>
@{
    ViewData["Title"] = "Verified Users";
    Layout = "_Layout";
}

<div class="page-header">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1><i class="fas fa-check-circle me-2"></i>Verified Users</h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Admin" asp-action="Dashboard">Dashboard</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index">Manage Registration</a></li>
                    <li class="breadcrumb-item active">Verified Users</li>
                </ol>
            </nav>
        </div>
        <div>
            <a asp-action="Index" class="btn btn-warning">
                <i class="fas fa-clock me-1"></i>View Pending Registrations
            </a>
        </div>
    </div>
</div>

<!-- Summary Card -->
<div class="row mb-4">
    <div class="col-md-12">
        <div class="card shadow-sm border-success">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted mb-1">Total Verified Users</h6>
                        <h2 class="mb-0 text-success">@Model.Count()</h2>
                    </div>
                    <div class="text-success">
                        <i class="fas fa-user-check fa-3x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Verified Users Table -->
<div class="dashboard-widget">
    <h5><i class="fas fa-list me-2"></i>Verified Customer Accounts</h5>

    @if (Model.Any())
    {
        <div class="table-responsive">
            <table class="table admin-table">
                <thead>
                    <tr>
                        <th>Username</th>
                        <th>Email</th>
                        <th>Registration Type</th>
                        <th>Registration Date</th>
                        <th>Verified Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>
                                <strong>@user.Username</strong>
                            </td>
                            <td>
                                <i class="fas fa-envelope me-1"></i>@user.Email
                            </td>
                            <td>
                                @if (!string.IsNullOrEmpty(user.ExternalLoginProvider))
                                {
                                    <span class="badge bg-info">
                                        <i class="fab fa-@user.ExternalLoginProvider.ToLower() me-1"></i>@user.ExternalLoginProvider
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">
                                        <i class="fas fa-envelope me-1"></i>Email/Password
                                    </span>
                                }
                            </td>
                            <td>
                                @user.CreatedAt.ToString("MMM dd, yyyy HH:mm")
                            </td>
                            <td>
                                @if (user.VerifiedDate.HasValue)
                                {
                                    <span class="text-success">
                                        <i class="fas fa-check me-1"></i>@user.VerifiedDate.Value.ToString("MMM dd, yyyy HH:mm")
                                    </span>
                                }
                                else
                                {
                                    <em class="text-muted">N/A</em>
                                }
                            </td>
                            <td>
                                <a asp-action="Details" asp-route-id="@user.UserId"
                                   class="btn btn-sm btn-info" title="View Details">
                                    <i class="fas fa-eye"></i> View
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="fas fa-info-circle me-2"></i>
            No verified users found.
        </div>
    }
</div>
