@model CalapanCarRentalMVC.Models.Rental
@{
    ViewData["Title"] = "Delete Rental";
    Layout = "_Layout";
}

<div class="container my-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-header bg-danger text-white">
                    <h3 class="mb-0"><i class="fas fa-trash-alt me-2"></i>Delete Rental</h3>
                </div>
                <div class="card-body">
                    <h4>Are you sure you want to delete this rental?</h4>
                    <dl class="row mt-4">
                        <dt class="col-sm-4">Rental ID</dt>
                        <dd class="col-sm-8">@Model.RentalId</dd>
                        <dt class="col-sm-4">Customer</dt>
                        <dd class="col-sm-8">@Model.Customer?.FirstName @Model.Customer?.LastName</dd>
                        <dt class="col-sm-4">Car</dt>
                        <dd class="col-sm-8">@Model.Car?.Brand @Model.Car?.Model</dd>
                        <dt class="col-sm-4">Pick-up Date & Time</dt>
                        <dd class="col-sm-8">@Model.RentalDate.ToString("g")</dd>
                        <dt class="col-sm-4">Return Date & Time</dt>
                        <dd class="col-sm-8">@Model.ReturnDate.ToString("g")</dd>
                        <dt class="col-sm-4">Status</dt>
                        <dd class="col-sm-8">@Model.Status</dd>
                    </dl>
                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="RentalId" />
                        <button type="submit" class="btn btn-danger"><i class="fas fa-trash-alt me-1"></i>Delete</button>
                        <a asp-action="Index" class="btn btn-secondary ms-2"><i class="fas fa-arrow-left me-1"></i>Cancel</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
