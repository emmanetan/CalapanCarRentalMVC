@model IEnumerable<CalapanCarRentalMVC.Models.Rental>
@{
    ViewData["Title"] = "Manage Rentals";
}

<div class="container my-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="fas fa-file-contract text-primary me-2"></i>Manage Rentals</h1>
        @if (Context.Session.GetString("UserRole") == "Admin")
        {
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus me-2"></i>New Rental
            </a>
        }
    </div>

    <!-- Filter Section -->
    <div class="card mb-4 shadow-sm">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-4">
                    <select name="filterStatus" class="form-select">
                        <option value="">All Status</option>
                        <option value="Active" selected="@(Context.Request.Query["filterStatus"] == "Active")">Active</option>
                        <option value="Completed" selected="@(Context.Request.Query["filterStatus"] == "Completed")">Completed</option>
                        <option value="Cancelled" selected="@(Context.Request.Query["filterStatus"] == "Cancelled")">Cancelled</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="fas fa-search me-2"></i>Filter
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Rentals Table -->
    @if (Model.Any())
    {
        <div class="card shadow-sm">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Rental ID</th>
                                <th>Customer</th>
                                <th>Car</th>
                                <th>Rental Date</th>
                                <th>Return Date</th>
                                <th>Total</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var rental in Model)
                            {
                                <tr>
                                    <td><strong>#@rental.RentalId</strong></td>
                                    <td>@rental.Customer.FirstName @rental.Customer.LastName</td>
                                    <td>@rental.Car.Brand @rental.Car.Model</td>
                                    <td>@rental.RentalDate.ToString("MMM dd, yyyy")</td>
                                    <td>@rental.ReturnDate.ToString("MMM dd, yyyy")</td>
                                    <td><strong>?@rental.TotalAmount.ToString("N2")</strong></td>
                                    <td>
                                        @if (rental.Status == "Active")
                                        {
                                            <span class="badge bg-success">@rental.Status</span>
                                        }
                                        else if (rental.Status == "Completed")
                                        {
                                            <span class="badge bg-primary">@rental.Status</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">@rental.Status</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-action="Details" asp-route-id="@rental.RentalId" class="btn btn-sm btn-outline-primary" title="Details">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            @if (Context.Session.GetString("UserRole") == "Admin")
                                            {
                                                @if (rental.Status == "Active")
                                                {
                                                    <a asp-action="Return" asp-route-id="@rental.RentalId" class="btn btn-sm btn-success" title="Mark as Returned">
                                                        <i class="fas fa-check"></i>
                                                    </a>
                                                }
                                                <a asp-action="Edit" asp-route-id="@rental.RentalId" class="btn btn-sm btn-edit" title="Edit">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <a asp-action="Delete" asp-route-id="@rental.RentalId" class="btn btn-sm btn-outline-danger" title="Delete">
                                                    <i class="fas fa-trash"></i>
                                                </a>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info text-center">
            <i class="fas fa-info-circle me-2"></i>No rentals found.
        </div>
    }
</div>

