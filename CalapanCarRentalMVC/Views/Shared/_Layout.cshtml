    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @if (Context.Session.GetString("UserRole") == "Admin" || Context.Session.GetString("UserRole") == "Customer")
    {
        <script>
                      // Sidebar toggle functionality with mobile support
            const sidebarToggle = document.getElementById('sidebarToggle');
                        const adminSidebar = document.getElementById('adminSidebar');
              const adminContent = document.getElementById('adminContent');
                 const sidebarOverlay = document.getElementById('sidebarOverlay');
                        const body = document.body;

                  function isMobile() {
                            return window.innerWidth < 992;
                   }

               function toggleSidebar() {
                            if (isMobile()) {
                 // Mobile behavior: show/hide with overlay
                     const isOpen = adminSidebar.classList.contains('show');

                 if (isOpen) {
                       adminSidebar.classList.remove('show');
                   sidebarOverlay.classList.remove('show');
               body.classList.remove('sidebar-open');
                   } else {
                adminSidebar.classList.add('show');
               sidebarOverlay.classList.add('show');
               body.classList.add('sidebar-open');
                     }
                  } else {
               // Desktop behavior: collapse/expand
                            adminSidebar.classList.toggle('collapsed');
                   adminContent.classList.toggle('expanded');

                      // Save state to localStorage
               const isCollapsed = adminSidebar.classList.contains('collapsed');
                  localStorage.setItem('sidebarCollapsed', isCollapsed);
                  }
                }

                        // Toggle sidebar on button click
                        if (sidebarToggle) {
                    sidebarToggle.addEventListener('click', toggleSidebar);
                   }

                // Close sidebar when clicking overlay (mobile only)
               if (sidebarOverlay) {
                     sidebarOverlay.addEventListener('click', function () {
                if (isMobile()) {
                   adminSidebar.classList.remove('show');
                      sidebarOverlay.classList.remove('show');
                         body.classList.remove('sidebar-open');
             }
                   });
                  }

                        // Close sidebar when clicking a link on mobile
                const sidebarLinks = document.querySelectorAll('.sidebar-link:not([data-bs-toggle])');
             sidebarLinks.forEach(link => {
                      link.addEventListener('click', function () {
                if (isMobile()) {
                   adminSidebar.classList.remove('show');
                   sidebarOverlay.classList.remove('show');
                     body.classList.remove('sidebar-open');
                         }
               });
                        });

                        // Restore sidebar state from localStorage (desktop only)
                if (!isMobile() && localStorage.getItem('sidebarCollapsed') === 'true') {
                      adminSidebar.classList.add('collapsed');
             adminContent.classList.add('expanded');
                        }

                 // Handle window resize
                  let resizeTimer;
                        window.addEventListener('resize', function () {
                 clearTimeout(resizeTimer);
                 resizeTimer = setTimeout(function () {
             if (!isMobile()) {
                   // Remove mobile classes when switching to desktop
                      adminSidebar.classList.remove('show');
                  sidebarOverlay.classList.remove('show');
                   body.classList.remove('sidebar-open');

                     // Restore desktop collapsed state
              if (localStorage.getItem('sidebarCollapsed') === 'true') {
                  adminSidebar.classList.add('collapsed');
                        adminContent.classList.add('expanded');
                   }
                     } else {
                         // Remove desktop collapsed state on mobile
                  adminSidebar.classList.remove('collapsed');
                            adminContent.classList.remove('expanded');
               }
                }, 250);
               });

                // Prevent body scroll when sidebar is open on mobile
                      if (isMobile() && adminSidebar.classList.contains('show')) {
              body.classList.add('sidebar-open');
                      }
        </script>
    }

    @await RenderSectionAsync("Scripts", required: false)
</body>
