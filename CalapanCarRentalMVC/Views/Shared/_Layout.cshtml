<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Calapan Car Rental</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CalapanCarRentalMVC.styles.css" asp-append-version="true" />
</head>
<body class="@(Context.Session.GetString("UserRole") == "Admin" || Context.Session.GetString("UserRole") == "Customer" ? "admin-body" : "")">
    <!-- Top Navigation Bar -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <div class="@(Context.Session.GetString("UserRole") == "Admin" || Context.Session.GetString("UserRole") == "Customer" ? "container-fluid" : "container")">
                @if (Context.Session.GetString("UserRole") == "Admin" || Context.Session.GetString("UserRole") == "Customer")
                {
                    <button class="btn btn-link text-white me-3" id="sidebarToggle">
                        <i class="fas fa-bars"></i>
                    </button>
                }
                <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">
                    <img src="~/images/logo/logo.png" alt="Calapan Car Rental Logo" class="navbar-logo me-2" />Calapan Car Rental
                    @if (Context.Session.GetString("UserRole") == "Admin")
                    {
                        <span class="badge bg-danger ms-2">Admin</span>
                    }
                    else if (Context.Session.GetString("UserRole") == "Customer")
                    {
                        <span class="badge bg-info ms-2">Customer</span>
                    }
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home me-1"></i>Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Cars" asp-action="Index">
                                <i class="fas fa-car me-1"></i>Browse Cars
                            </a>
                        </li>
                        @if (Context.Session.GetString("UserRole") != "Admin")
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Home" asp-action="About">
                                    <i class="fas fa-info-circle me-1"></i>About
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Home" asp-action="Contact">
                                    <i class="fas fa-envelope me-1"></i>Contact
                                </a>
                            </li>
                        }
                        @if (Context.Session.GetString("UserRole") == "Admin")
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Admin" asp-action="Dashboard">
                                    <i class="fas fa-tachometer-alt me-1"></i>Dashboard
                                </a>
                            </li>
                        }
                        @if (Context.Session.GetString("UserRole") == "Customer")
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Customer" asp-action="Dashboard">
                                    <i class="fas fa-tachometer-alt me-1"></i>My Dashboard
                                </a>
                            </li>
                        }
                    </ul>
                    <ul class="navbar-nav">
                        @if (Context.Session.GetString("Username") != null)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                    <i class="fas fa-user@(Context.Session.GetString("UserRole") == "Admin" ? "-shield" : "") me-1"></i>@Context.Session.GetString("Username")
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    @if (Context.Session.GetString("UserRole") == "Customer")
                                    {
                                        <li><a class="dropdown-item" asp-controller="Customer" asp-action="Profile"><i class="fas fa-user-cog me-2"></i>Profile</a></li>
                                        <li><hr class="dropdown-divider"></li>
                                    }
                                    @if (Context.Session.GetString("UserRole") == "Admin")
                                    {
                                        <li><a class="dropdown-item" href="#"><i class="fas fa-cog me-2"></i>Settings</a></li>
                                        <li><hr class="dropdown-divider"></li>
                                    }
                                    <li><a class="dropdown-item" asp-controller="Account" asp-action="Logout"><i class="fas fa-sign-out-alt me-2"></i>Logout</a></li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Login">
                                    <i class="fas fa-sign-in-alt me-1"></i>Login
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Register">
                                    <i class="fas fa-user-plus me-1"></i>Register
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    @if (Context.Session.GetString("UserRole") == "Admin" || Context.Session.GetString("UserRole") == "Customer")
    {
        <!-- Layout with Sidebar -->
        <div class="admin-wrapper">
            <!-- Left Sidebar -->
            <aside class="admin-sidebar" id="adminSidebar">
                <div class="sidebar-header">
                    <h5 class="text-white mb-0">
                        <i class="fas fa-@(Context.Session.GetString("UserRole") == "Admin" ? "tachometer-alt" : "user") me-2"></i>@(Context.Session.GetString("UserRole") == "Admin" ? "Admin Menu" : "My Menu")
                    </h5>
                </div>
                <ul class="sidebar-menu">
                    @if (Context.Session.GetString("UserRole") == "Admin")
                    {
                        <!-- Admin Sidebar -->
                        <li class="sidebar-item">
                            <a class="sidebar-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Admin" && ViewContext.RouteData.Values["Action"]?.ToString() == "Dashboard" ? "active" : "")"
                               asp-controller="Admin" asp-action="Dashboard">
                                <i class="fas fa-tachometer-alt"></i>
                                <span>Dashboard</span>
                            </a>
                        </li>
                        <li class="sidebar-item">
                            <a class="sidebar-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Cars" ? "active" : "")"
                               asp-controller="Cars" asp-action="Index">
                                <i class="fas fa-car"></i>
                                <span>Manage Cars</span>
                            </a>
                        </li>
                        <li class="sidebar-item">
                            <a class="sidebar-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Customers" ? "active" : "")"
                               asp-controller="Customers" asp-action="Index">
                                <i class="fas fa-users"></i>
                                <span>Manage Customers</span>
                            </a>
                        </li>
                        <li class="sidebar-item">
                            <a class="sidebar-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Rentals" ? "active" : "")"
                               asp-controller="Rentals" asp-action="Index">
                                <i class="fas fa-file-contract"></i>
                                <span>Manage Rentals</span>
                            </a>
                        </li>
                        <li class="sidebar-item">
                            <a class="sidebar-link" href="#reportsSubmenu" data-bs-toggle="collapse" aria-expanded="false">
                                <i class="fas fa-chart-bar"></i>
                                <span>Reports</span>
                                <i class="fas fa-chevron-down ms-auto"></i>
                            </a>
                            <ul class="collapse sidebar-submenu" id="reportsSubmenu">
                                <li><a href="#"><i class="fas fa-chart-line me-2"></i>Revenue Report</a></li>
                                <li><a href="#"><i class="fas fa-calendar-check me-2"></i>Rental History</a></li>
                                <li><a href="#"><i class="fas fa-car-side me-2"></i>Vehicle Utilization</a></li>
                                <li><a href="#"><i class="fas fa-user-check me-2"></i>Customer Statistics</a></li>
                            </ul>
                        </li>
                        <li class="sidebar-divider"></li>
                        <li class="sidebar-item">
                            <a class="sidebar-link" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-globe"></i>
                                <span>Back to Website</span>
                            </a>
                        </li>
                    }
                    else if (Context.Session.GetString("UserRole") == "Customer")
                    {
                        <!-- Customer Sidebar -->
                        <li class="sidebar-item">
                            <a class="sidebar-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Customer" && ViewContext.RouteData.Values["Action"]?.ToString() == "Dashboard" ? "active" : "")"
                               asp-controller="Customer" asp-action="Dashboard">
                                <i class="fas fa-tachometer-alt"></i>
                                <span>Dashboard</span>
                            </a>
                        </li>
                        <li class="sidebar-item">
                            <a class="sidebar-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Customer" && ViewContext.RouteData.Values["Action"]?.ToString() == "MyRentals" ? "active" : "")"
                               asp-controller="Customer" asp-action="MyRentals">
                                <i class="fas fa-file-contract"></i>
                                <span>My Rentals</span>
                            </a>
                        </li>
                        <li class="sidebar-item">
                            <a class="sidebar-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Cars" ? "active" : "")"
                               asp-controller="Cars" asp-action="Index">
                                <i class="fas fa-car"></i>
                                <span>Browse Cars</span>
                            </a>
                        </li>
                        <li class="sidebar-item">
                            <a class="sidebar-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Customer" && ViewContext.RouteData.Values["Action"]?.ToString() == "Profile" ? "active" : "")"
                               asp-controller="Customer" asp-action="Profile">
                                <i class="fas fa-user-circle"></i>
                                <span>My Profile</span>
                            </a>
                        </li>
                        <li class="sidebar-divider"></li>
                        <li class="sidebar-item">
                            <a class="sidebar-link" asp-controller="Home" asp-action="About">
                                <i class="fas fa-info-circle"></i>
                                <span>About Us</span>
                            </a>
                        </li>
                        <li class="sidebar-item">
                            <a class="sidebar-link" asp-controller="Home" asp-action="Contact">
                                <i class="fas fa-envelope"></i>
                                <span>Contact Us</span>
                            </a>
                        </li>
                    }
                </ul>
            </aside>

            <!-- Main Content Area -->
            <main class="admin-content" id="adminContent">
                <div class="container-fluid py-4">
                    @RenderBody()
                </div>
            </main>
        </div>
    }
    else
    {
        <!-- Regular Layout without Sidebar -->
        <main role="main" class="mb-4">
            @RenderBody()
        </main>
    }

    @if (Context.Session.GetString("UserRole") != "Admin" && Context.Session.GetString("UserRole") != "Customer")
    {
        <!-- Footer only for non-logged-in users or non-dashboard pages -->
        <footer class="bg-dark text-white py-4">
            <div class="container">
                <div class="row">
                    <div class="col-md-4">
                        <h5><i class="fas fa-car me-2"></i>Calapan Car Rental</h5>
                        <p>Your trusted partner for quality car rentals in Calapan City.</p>
                        <div class="mt-3">
                            <a href="https://web.facebook.com/calapancarrental/?_rdc=1&_rdr#" target="_blank" class="text-white fs-4 me-3" title="Follow us on Facebook">
                                <i class="fab fa-facebook"></i>
                            </a>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <h5>Quick Links</h5>
                        <ul class="list-unstyled">
                            <li><a asp-controller="Home" asp-action="About" class="text-white text-decoration-none">About Us</a></li>
                            <li><a href="#" class="text-white text-decoration-none">Terms & Conditions</a></li>
                            <li><a asp-controller="Home" asp-action="Privacy" class="text-white text-decoration-none">Privacy Policy</a></li>
                        </ul>
                    </div>
                    <div class="col-md-4">
                        <h5>Contact Us</h5>
                        <p>
                            <i class="fas fa-phone me-2"></i>09053557525 / 09167465112<br />
                            <i class="fas fa-envelope me-2"></i>info@calapancarrental.com<br />
                            <i class="fas fa-map-marker-alt me-2"></i>Calapan City, Oriental Mindoro
                        </p>
                    </div>
                </div>
                <hr class="bg-white" />
                <div class="text-center pb-3">
                    <p class="mb-0">&copy; 2025 Calapan Car Rental. All rights reserved.</p>
                </div>
            </div>
        </footer>
    }

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @if (Context.Session.GetString("UserRole") == "Admin" || Context.Session.GetString("UserRole") == "Customer")
    {
        <script>
                // Sidebar toggle functionality
                const sidebarToggle = document.getElementById('sidebarToggle');
                   const adminSidebar = document.getElementById('adminSidebar');
              const adminContent = document.getElementById('adminContent');

                if (sidebarToggle && adminSidebar && adminContent) {
             sidebarToggle.addEventListener('click', function() {
                      adminSidebar.classList.toggle('collapsed');
             adminContent.classList.toggle('expanded');

                            // Save state to localStorage
                 const isCollapsed = adminSidebar.classList.contains('collapsed');
             localStorage.setItem('sidebarCollapsed', isCollapsed);
                       });

                  // Restore sidebar state from localStorage
                if (localStorage.getItem('sidebarCollapsed') === 'true') {
                       adminSidebar.classList.add('collapsed');
            adminContent.classList.add('expanded');
                    }
                  }
        </script>
    }

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

