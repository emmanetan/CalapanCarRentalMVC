          <div class="container-fluid p-0">
   @{
     // Check if banner.jpg exists and convert to Base64
        var bannerPath = System.IO.Path.Combine(Directory.GetCurrentDirectory(), "wwwroot", "images", "banner.jpg");
        string base64Image = "";
            
             if (System.IO.File.Exists(bannerPath))
          {
          try
          {
     byte[] imageBytes = System.IO.File.ReadAllBytes(bannerPath);
     base64Image = Convert.ToBase64String(imageBytes);
      }
               catch
            {
          base64Image = "";
               }
   }
              }
      
       @if (!string.IsNullOrEmpty(base64Image))
   {
            <img src="data:image/jpeg;base64,@base64Image" 
         alt="Calapan Car Rental Banner" 
        class="img-fluid w-100" 
          style="max-height: 400px; object-fit: cover;" />
             }
